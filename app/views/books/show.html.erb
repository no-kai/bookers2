<h1>Book detail</h1>

<div>
  <%= attachment_image_tag @book, :image_id %>
  <p>username：<%= @book.user.name %></p>
  <p>Title：<%= @book.title %></p>
  <p>Opinion：<%= @book.opinion %></p>
  <% if @book.user == current_user %>
    <%= link_to "Edit", "/books/#{@book.id}/edit" %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>

  <% end %>

</div>