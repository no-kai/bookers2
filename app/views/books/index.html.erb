<h1>User info</h1>

<div>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpeg' , fallback: "no_image.jpg" %>

  <h4>name:<%= @user.name %></h4>
  <h4>introduction:<%= @user.introduction %></h4>

  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>


<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>


<h1>Books</h1>

<% @books.each do |book| %>
<div>
  <%= attachment_image_tag book, :image_id %>
  <p>投稿ユーザー画像：<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.opinion %></p>
  <%= link_to "Show", "/books/#{book.id}/" %>

</div>
<% end %>