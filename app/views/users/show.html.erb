<div>
  <h3><%= @user.name %></h3>
  <%= image_tag('no_image.jpg') %>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= attachment_image_tag book, :image_id %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag('no_image.jpg') %></p>
  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.opinion %></p>

</div>
<% end %>
