<h1>User info</h1>

<div>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpeg' , fallback: "no_image.jpg" %>

  <h4>name:<%= @user.name %></h4>
  <h4>introduction:<%= @user.introduction %></h4>

  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= attachment_image_tag book, :image_id %>
  <% end %>
  <p>投稿ユーザー画像：<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>

</div>
<% end %>
